<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- Permisos de internet -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Inmobiliaria_2025"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".presentation.ui.PaymentListActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.ui.InquilinoDetailActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.ui.ContractDetailActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.ui.ContractListActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.ui.CreatePropertyActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.ui.PropertyDetailActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.ui.PropertyListActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.ui.EditProfileActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.ui.RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.ui.LoginActivity"
            android:exported="true"
            android:label="@string/title_activity_login"
            android:theme="@style/Theme.Inmobiliaria_2025">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:theme="@style/Theme.Inmobiliaria_2025" />
    </application>

</manifest>