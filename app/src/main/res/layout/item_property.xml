<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardBackgroundColor="@color/card_background"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Property Image -->
        <ImageView
            android:id="@+id/ivPropertyImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:background="@color/card_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/card_background" />

        <!-- Status Badge -->
        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:text="Disponible"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:textStyle="bold"
            android:background="@drawable/status_available_background"
            app:layout_constraintEnd_toEndOf="@id/ivPropertyImage"
            app:layout_constraintTop_toTopOf="@id/ivPropertyImage"
            android:layout_margin="8dp" />

        <!-- Title -->
        <TextView
            android:id="@+id/tvPropertyTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="8dp"
            android:text="Título de la Propiedad"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivPropertyImage"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Casa en el centro" />

        <!-- Address -->
        <TextView
            android:id="@+id/tvPropertyAddress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="Dirección completa"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:alpha="0.7"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivPropertyImage"
            app:layout_constraintTop_toBottomOf="@id/tvPropertyTitle"
            tools:text="Calle Falsa 123, Ciudad" />

        <!-- Price -->
        <TextView
            android:id="@+id/tvPropertyPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:text="$ 150,000"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/ivPropertyImage"
            app:layout_constraintTop_toBottomOf="@id/tvPropertyAddress"
            tools:text="$ 150,000" />

        <!-- Rooms -->
        <TextView
            android:id="@+id/tvPropertyRooms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:text="3 habitaciones"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:alpha="0.7"
            app:layout_constraintStart_toEndOf="@id/tvPropertyPrice"
            app:layout_constraintTop_toBottomOf="@id/tvPropertyAddress"
            tools:text="3 habitaciones" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>